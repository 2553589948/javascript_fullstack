/* pages/live/index.wxss */
.hy-navbar-fix {
  position: fixed;
  top: 0;
  z-index: 999;
}
.hy-navbar {
  width: 100%;
  box-sizing: border-box;
  padding: 0 10rpx;
  white-space: nowrap;
  display: flex;
  overflow-x: auto; /* 兼容安卓 */
  height: 100rpx;
  background-color: #fff;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
}
.hy-navbar__item {
  margin: 20rpx;
  padding: 0 15rpx;
  text-align: center;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 26rpx;
}
.hy-navbar__item.on {
  border: 1px solid orange;
  color: orange;
  border-radius: 40rpx;
}
::-webkit-scrollbar {
  /* 取消横向滚动条 */
  width: 0;
  height: 0;
  color: transparent;
}
.hy-allLives{
    z-index: 0;
    margin-top: 15rpx;
    width: 100%; 
}
.hy-allLives-content-small{
    width: 355rpx;
    height: 220rpx;
    padding: 0 10rpx;
    float: left;
    font-size: 26rpx;
    margin-bottom: 70rpx;
}
.hy-allLives-content-small image, .hy-allLives-content-small navigator{
    display: block;
    width: 100%;
    height: 100%;
    border-radius: 16rpx;
    box-shadow: 0 0 0 rgba(0,0,0,.5);
}
.hy-allLives-content{
    width: 100%;
    height: 275rpx;
}
.hy-allLives-content-small .hy-allLives-content-text{
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    padding-top: 6px;
}
